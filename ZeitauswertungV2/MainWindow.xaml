<Window x:Class="ZeitauswertungV2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ZeitauswertungV2"
        mc:Ignorable="d"
        Title="ZeitauswertungV2" Height="1139" Width="1878.5" FontSize="20" WindowState="Maximized">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <Label Grid.Column="0" Grid.ColumnSpan="1" Content="Bearbeiter" HorizontalAlignment="Left" />
        <ComboBox Grid.Column="1" Grid.ColumnSpan="2" Name="cmb_Employee" Padding="20 0 0 0"/>
        <Label Grid.Column="3" Content="Von" HorizontalAlignment="Right"/>
        <DatePicker Grid.Column="4" />
        <Label Grid.Column="5" Content="Bis" HorizontalAlignment="Right"/>
        <DatePicker Grid.Column="6"/>
        <Button Grid.Column="7" Name="btn_search" Content="Suchen" Margin="20 0 0 0"/>
        
        
        <Label Grid.Column="0" Grid.Row="1" Content="Soll Arbeitsstunden:" HorizontalAlignment="Left" />
        <TextBox Grid.Column="1" Grid.Row="1" Name="tb_MandatoryHoursInRange" HorizontalAlignment="Left" MinWidth="50" Width="Auto"/>
        
        <Label Grid.Column="0" Grid.Row="2" Content="Gesamtstunden: " HorizontalAlignment="Left" />
        <TextBox Grid.Column="1" Grid.Row="2" Name="tb_BookedHours" HorizontalAlignment="Left" MinWidth="50" Width="Auto"/>
        
        <Label Grid.Column="2" Grid.Row="2" Content="Gearbeitete Stunden: " HorizontalAlignment="Left"/>
        <TextBox Grid.Column="3" Grid.Row="2" Name="tb_WorkedHoures" HorizontalAlignment="Left" MinWidth="50" Width="Auto"/>

        <Label Grid.Column="4" Grid.Row="2" Content="Urlaub gebucht: " HorizontalAlignment="Left" />
        <TextBox Grid.Column="5" Grid.Row="2" Name="tb_HolidayHours" HorizontalAlignment="Left" MinWidth="50" Width="Auto"/>

        <Label Grid.Column="6" Grid.Row="2" Content="Krank gebucht: " HorizontalAlignment="Left" />
        <TextBox Grid.Column="7"  Grid.Row="2" Name="tb_SickHours" HorizontalAlignment="Left" MinWidth="50" Width="Auto"/>

        <DataGrid Grid.Row="3" Grid.ColumnSpan="8"/>


    </Grid>
</Window>
